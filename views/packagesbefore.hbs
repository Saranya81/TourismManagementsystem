      //delete and edit 
      
      function editPackage(button) {
        // Get the row corresponding to the clicked edit button
        var row = button.closest('tr');
    
        // Extract package information from the row
        var name = row.cells[0].textContent;
        var description = row.cells[1].textContent;
        var price = row.cells[2].textContent;
        var duration = row.cells[3].textContent;
        var contactName = row.cells[4].textContent;
        var contactNumber = row.cells[5].textContent;
    
        // Replace the cell contents with input fields for editing
        row.cells[0].innerHTML = '<input type="text" value="' + name + '" style="background-color:white; border: 2px solid black; height:50px ;font-family: \'Lexend\', sans-serif;">';
        row.cells[1].innerHTML = '<input type="text" value="' + description + '" style="background-color:white; border: 2px solid black;height:50px;font-family: \'Lexend\', sans-serif;">';
        row.cells[2].innerHTML = '<input type="text" value="' + price + '" style="background-color:white; border: 2px solid black;height:50px;font-family: \'Lexend\', sans-serif;">';
        row.cells[3].innerHTML = '<input type="text" value="' + duration + '" style="background-color:white; border: 2px solid black;height:50px;font-family: \'Lexend\', sans-serif;">';
        row.cells[4].innerHTML = '<input type="text" value="' + contactName + '" style="background-color:white; border: 2px solid black;height:50px;font-family: \'Lexend\', sans-serif;">';
        row.cells[5].innerHTML = '<input type="text" value="' + contactNumber + '" style="background-color:white; border: 2px solid black;height:50px;font-family: \'Lexend\', sans-serif;">';
    
        // Append save and delete buttons back to the action column
        row.cells[6].innerHTML = '<button class="save" onclick="saveChanges(this)"><i class="ri-save-fill"></i></button>' +
                                 '<button class="delete" onclick="deletePackage(this)"><i class="ri-delete-bin-6-fill"></i></button>';
    }
    
    
    function saveChanges(button) {
        // Get the row corresponding to the clicked edit button
        var row = button.closest('tr');
    
        // Extract the edited values from input fields
        var name = row.cells[0].querySelector('input').value;
        var description = row.cells[1].querySelector('input').value;
        var price = row.cells[2].querySelector('input').value;
        var duration = row.cells[3].querySelector('input').value;
        var contactName = row.cells[4].querySelector('input').value;
        var contactNumber = row.cells[5].querySelector('input').value;
    
        // Update the cell contents with the edited values
        row.cells[0].textContent = name;
        row.cells[1].textContent = description;
        row.cells[2].textContent = price;
        row.cells[3].textContent = duration;
        row.cells[4].textContent = contactName;
        row.cells[5].textContent = contactNumber;
    
